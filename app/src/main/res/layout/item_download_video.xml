<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_http"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_77dp"
    android:background="@color/bg_app_main"
    android:paddingTop="@dimen/size_10dp"
    android:paddingBottom="@dimen/size_10dp">

    <CheckBox
        android:id="@+id/checkbox_chose"
        android:layout_width="@dimen/size_18dp"
        android:layout_height="@dimen/size_18dp"
        android:layout_marginStart="@dimen/size_15dp"
        android:layout_marginEnd="@dimen/size_15dp"
        android:button="@drawable/selector_checkbox_selected"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/tv_image"
        android:layout_width="@dimen/size_83dp"
        android:layout_height="@dimen/size_57dp"
        android:layout_marginStart="@dimen/size_14dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/checkbox_chose"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_14dp"
        android:layout_marginEnd="@dimen/size_14dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="aaaaa"
        android:textColor="@color/colorGray"
        app:layout_constraintLeft_toRightOf="@+id/tv_image"
        app:layout_constraintTop_toTopOf="@+id/tv_image" />


    <LinearLayout
        android:id="@+id/p1"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_14dp"
        android:layout_marginEnd="@dimen/size_14dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toRightOf="@+id/tv_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title">

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progressView"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_3dp"
                android:layout_marginTop="@dimen/size_8dp"
                android:layout_marginBottom="@dimen/size_4dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/bg_progress_loading" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_12sp" />

                <View
                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_12sp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_stateChange"
                android:layout_width="@dimen/size_22dp"
                android:layout_height="@dimen/size_22dp"
                android:layout_marginStart="@dimen/size_8dp"
                android:background="@drawable/ic_video_play"
                android:clickable="true"
                android:focusable="true"
                android:visibility="visible" />


            <ImageView
                android:id="@+id/btn_menu"
                android:layout_width="@dimen/size_22dp"
                android:layout_height="@dimen/size_22dp"
                android:layout_marginStart="@dimen/size_8dp"
                android:background="@drawable/ic_video_menu"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>