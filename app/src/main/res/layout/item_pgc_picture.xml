<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_10dp"
    android:orientation="vertical">

    <!--headImage-->
    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/size_45dp"
        android:layout_height="@dimen/size_45dp"
        android:layout_marginTop="@dimen/size_10dp"
        android:layout_marginEnd="@dimen/size_5dp" />

    <!--title-->
    <TextView
        android:id="@+id/tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_head"
        android:layout_toEndOf="@id/iv_head"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="aaaaaaaaaa"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:textStyle="bold" />
    <!--desc-->
    <TextView
        android:id="@+id/tv_authorDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_author"
        android:layout_alignBottom="@id/iv_head"
        android:layout_toEndOf="@id/iv_head"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="asssssssssssss" />


    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_head"
        android:layout_marginTop="@dimen/size_5dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/font_15sp" />

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/flowLayout_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_desc"
        android:layout_marginTop="@dimen/size_5dp" />

    <com.lzy.ninegrid.NineGridView
        android:id="@+id/nineGridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/flowLayout_tag"
        android:layout_marginTop="@dimen/size_5dp"
        android:layout_marginBottom="@dimen/size_10dp"
        android:background="@drawable/bg_card_round" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/nineGridView"
        android:layout_marginTop="@dimen/size_10dp"
        android:background="@color/color_CCCCCC" />

</RelativeLayout>