<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_notify_download_bg"
    android:orientation="horizontal"
    android:paddingStart="@dimen/size_10dp"
    android:paddingTop="@dimen/size_15dp"
    android:paddingEnd="@dimen/size_15dp"
    android:paddingBottom="@dimen/size_15dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="92dp"
        android:layout_height="@dimen/size_60dp"
        android:src="@mipmap/demo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/size_15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:text="111"
            android:textColor="@color/white" />

        <ProgressBar
            android:id="@+id/progressView"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_3dp"
            android:layout_marginTop="@dimen/size_8dp"
            android:layout_marginBottom="@dimen/size_4dp"
            android:max="100"
            android:progressDrawable="@drawable/progress_bar_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/color_chose_button"
                android:textSize="@dimen/size_12dp" />

            <TextView
                android:layout_width="0px"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_chose_button"
                android:textSize="@dimen/size_12dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
