<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorGray</item>

        <!--        <item name="android:windowFullscreen">true</item>  splash可以全屏，但后面的Activity需要一一定制-->
        <!--        <item name="android:windowBackground">@mipmap/ic_window_bg</item>-->
    </style>

    <style name="NoStateBarActivity" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SplashTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <!-- 闪屏背景，可用图片 -->
        <item name="android:windowBackground">@mipmap/ic_window_bg</item>
<!--        <item name="android:background">@android:color/transparent</item>-->
<!--        <item name="android:windowIsTranslucent">false</item>-->
        <!--statusBar透明-->
<!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--虚拟按键透明 -->
<!--        <item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <!--    <style name="TranslucentTheme" parent="AppTheme"></style>-->

    <style name="Theme.Light.NoTitle.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="BottomDialog" parent="Theme.Light.NoTitle.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Animation.Bottom.Rising" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="CheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/color_FF6600</item>
        <item name="colorControlActivated">@color/color_FF6600</item>
    </style>
</resources>
